<%- include('../partials/head') %>

<body class="bg-gray-100 min-h-screen flex flex-col">
  <%- include('../partials/nav') %>

  <div class=" mt-17 flex-grow flex justify-center items-center">
    <div class="bg-white shadow-xl rounded-3xl p-8 w-full max-w-lg">
      <header class="text-center font-bold text-3xl text-gray-800 mb-6">
        <h1>Register Your Details</h1>
      </header>

      <main>
        <form action="/signup" method="POST" class="flex flex-col space-y-4">
          <!-- Input Fields -->
          <input class="border border-gray-300 rounded-lg p-3 bg-gray-50 focus:ring-2 focus:ring-indigo-500 outline-none" 
                 type="text" name="firstName" placeholder="First Name" required>

          <input class="border border-gray-300 rounded-lg p-3 bg-gray-50 focus:ring-2 focus:ring-indigo-500 outline-none" 
                 type="text" name="lastName" placeholder="Last Name">

          <input class="border border-gray-300 rounded-lg p-3 bg-gray-50 focus:ring-2 focus:ring-indigo-500 outline-none" 
                 type="email" name="email" placeholder="test@pop.com" required>

          <input class="border border-gray-300 rounded-lg p-3 bg-gray-50 focus:ring-2 focus:ring-indigo-500 outline-none" 
                 type="password" name="password" placeholder="Enter your password" required>

          <input class="border border-gray-300 rounded-lg p-3 bg-gray-50 focus:ring-2 focus:ring-indigo-500 outline-none" 
                 type="password" name="confirmPassword" placeholder="Confirm your password" required>

          <!-- User Type Radio Buttons -->
          <div>
            <p class="text-lg font-medium text-gray-700 mb-2">User Type:</p>
            <div class="flex space-x-6">
              <label for="guest" class="flex items-center space-x-2 cursor-pointer">
                <input type="radio" name="userType" value="guest" id="guest" class="accent-amber-500" checked>
                <span class="text-gray-700">Guest</span>
              </label>
              <label for="host" class="flex items-center space-x-2 cursor-pointer">
                <input type="radio" name="userType" value="host" id="host" class="accent-amber-500">
                <span class="text-gray-700">Host</span>
              </label>
            </div>
          </div>

          <!-- Terms and Conditions -->
          <div class="flex items-center space-x-3">
            <input type="checkbox" name="terms" id="terms" class="accent-amber-500" required>
            <label for="terms" class="text-sm text-gray-700 cursor-pointer">
              I agree to the 
              <a href="#" class="text-amber-600 underline hover:text-amber-700">terms and conditions</a>
            </label>
          </div>

          <!-- Submit Button -->
          <input class="bg-indigo-600 text-white rounded-lg p-3 font-semibold hover:bg-indigo-700 transition-all cursor-pointer" 
                 type="submit" value="Register">
        </form>
      </main>
    </div>
  </div>
</body>
</html>
