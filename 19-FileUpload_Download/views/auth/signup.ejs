<%- include('../partials/head') %>

<body class="bg-gradient-to-br from-indigo-100 to-blue-100 min-h-screen flex flex-col">
  <%- include('../partials/nav') %>

  <div class="flex-grow flex justify-center items-center px-4 mt-22">
    <div class="bg-white shadow-2xl rounded-3xl px-10 py-12 w-full max-w-lg">

      <!-- Header -->
      <header class="text-center mb-8">
        <h1 class="text-3xl font-extrabold text-gray-800">Register Your Details</h1>
        <p class="text-sm text-gray-500 mt-1">Create your account in just a few steps.</p>
      </header>

      <!-- Error Messages -->
      <%- include('../partials/error') %>

      <!-- Registration Form -->
      <main>
        <form action="/signup" method="POST" class="flex flex-col space-y-5">

          <!-- First Name -->
          <input 
            class="border-2 border-gray-300 rounded-xl p-3 bg-gray-50 focus:ring-2 focus:ring-indigo-500 outline-none transition-all" 
            type="text" 
            name="firstName" 
            placeholder="First Name" 
            value="<%= oldInput.firstName ? oldInput.firstName : '' %>" 
            required
          >

          <!-- Last Name -->
          <input 
            class="border-2 border-gray-300 rounded-xl p-3 bg-gray-50 focus:ring-2 focus:ring-indigo-500 outline-none transition-all" 
            type="text" 
            name="lastName" 
            placeholder="Last Name" 
            value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
          >

          <!-- Email -->
          <input 
            class="border-2 border-gray-300 rounded-xl p-3 bg-gray-50 focus:ring-2 focus:ring-indigo-500 outline-none transition-all" 
            type="email" 
            name="email" 
            placeholder="Email address" 
            value="<%= oldInput.email ? oldInput.email : '' %>" 
            required
          >

          <!-- Password -->
          <input 
            class="border-2 border-gray-300 rounded-xl p-3 bg-gray-50 focus:ring-2 focus:ring-indigo-500 outline-none transition-all" 
            type="password" 
            name="password" 
            placeholder="Password" 
            value="<%= oldInput.password ? oldInput.password : '' %>" 
            required
          >

          <!-- Confirm Password -->
          <input 
            class="border-2 border-gray-300 rounded-xl p-3 bg-gray-50 focus:ring-2 focus:ring-indigo-500 outline-none transition-all" 
            type="password" 
            name="confirmPassword" 
            placeholder="Confirm Password" 
            required
          >

          <!-- User Type -->
          <div>
            <p class="text-lg font-medium text-gray-700 mb-2">User Type:</p>
            <div class="flex space-x-6">
              <label for="guest" class="flex items-center space-x-2 cursor-pointer">
                <input 
                  type="radio" 
                  name="userType" 
                  value="guest" 
                  id="guest" 
                  class="accent-amber-500" 
                  <%= oldInput.userType === 'guest' ? 'checked' : '' %>
                >
                <span class="text-gray-700">Guest</span>
              </label>

              <label for="host" class="flex items-center space-x-2 cursor-pointer">
                <input 
                  type="radio" 
                  name="userType" 
                  value="host" 
                  id="host" 
                  class="accent-amber-500"
                  <%= oldInput.userType === 'host' ? 'checked' : '' %>
                >
                <span class="text-gray-700">Host</span>
              </label>
            </div>
          </div>

          <!-- Terms and Conditions -->
          <div class="flex items-center space-x-3">
            <input 
              type="checkbox" 
              name="terms" 
              id="terms" 
              class="accent-amber-500" 
              required
            >
            <label for="terms" class="text-sm text-gray-700 cursor-pointer">
              I agree to the 
              <a href="/terms" class="text-amber-600 underline hover:text-amber-700">terms and conditions</a>
            </label>
          </div>

          <!-- Submit Button -->
          <input 
            class="bg-indigo-600 text-white rounded-xl p-3 font-semibold hover:bg-indigo-700 transition-all cursor-pointer" 
            type="submit" 
            value="Register"
          >
        </form>

        <!-- Redirect to Login -->
        <p class="text-center text-sm text-gray-600 mt-6">
          Already have an account?
          <a href="/login" class="text-indigo-600 font-medium hover:underline">Login here</a>
        </p>
      </main>
    </div>
  </div>
</body>

</html>
