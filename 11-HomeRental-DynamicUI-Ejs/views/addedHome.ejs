<%- include('partials/head') %>
<body class="bg-gray-100 flex justify-center items-center min-h-screen">
  <%- include('partials/nav') %>

  <div class="w-full max-w-lg p-6 bg-white text-center rounded-xl shadow-xl border border-gray-300">
    <!-- Header Section -->
    <header class="p-4">
      <h1 class="font-extrabold text-3xl text-gray-800">🏡 Registration Successful 🎉</h1>
    </header>

    <!-- Main Content (Details Card) -->
    <main class="mt-6 p-6 border-4 border-amber-700 rounded-lg bg-gradient-to-r from-amber-400 to-amber-600 shadow-md">
      <div class="flex flex-col items-center space-y-4">
        <!-- House Name -->
        <p class="text-2xl font-semibold text-white">
          🏠 House Name: 
          <strong class="text-gray-900 bg-white px-3 py-1 rounded-lg shadow">
            <%= registerHome.houseName %>
          </strong>
        </p>

        <!-- Price -->
        <p class="text-2xl font-semibold text-white">
          💰 Price Per Night: 
          <strong class="text-gray-900 bg-white px-3 py-1 rounded-lg shadow">
            NPR <%= registerHome.price %>
          </strong>
        </p>

        <!-- Location -->
        <p class="text-2xl font-semibold text-white">
          📍 Location: 
          <strong class="text-gray-900 bg-white px-3 py-1 rounded-lg shadow">
            <%= registerHome.location %>
          </strong>
        </p>

        <!-- Rating -->
        <p class="text-2xl font-semibold text-white">
          ⭐ Rating: 
          <strong class="text-gray-900 bg-white px-3 py-1 rounded-lg shadow">
            <%= registerHome.rating || "Not Rated" %>
          </strong>
        </p>

        <!-- Photo -->
        <% if (registerHome.photoUrl) { %>
          <div class="flex flex-col items-center">
            <p class="text-2xl font-semibold text-white mb-2">📸 House Photo:</p>
            <img 
              src="<%= registerHome.photoUrl %>" 
              alt="House Image" 
              class="w-48 h-48 rounded-xl border-4 border-white shadow-lg object-cover"
            />
          </div>
        <% } else { %>
          <p class="text-2xl font-semibold text-white">🚫 No Photo Available</p>
        <% } %>
      </div>
    </main>
  </div>
</body>
</html>
